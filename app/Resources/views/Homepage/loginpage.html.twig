<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="jumbotron text-center">
  <h1>Loginpagina Lunenburg VMS</h1>
</div>

<div class="container">
  <div class="row">
    {%  if is_granted('ROLE_INKOPER')%}
    <div class="col-sm-4">
      <h3>Inkoper</h3>
        <a href ="{{ path ('homepageInkoper')}}">Inloggen als inkoper</a> <br>
    </div>
    {% endif %}
    {%  if is_granted('ROLE_MAGAZIJNMEESTER')%}
    <div class="col-sm-4">
      <h3>Magazijnmeester</h3>
        <a href="{{ path ('homepageMagazijnmeester')}}">Inloggen als magazijnmeester</a> <br>
  </div>
  {% endif %}
  {%  if is_granted('ROLE_ADMIN')%}
    <div class="col-sm-4">
    <h3>Beheerder</h3>
      <a href="{{ path ('homepageAdmin')}}">Inloggen als beheerder</a> <br>
    </div>
  {% endif %}
  {%  if is_granted('ROLE_VERKOPER')%}
    <div class="col-sm-4">
    <h3>Verkoper</h3>
      <a href="{{ path ('homepageVerkoper')}}">Inloggen als verkoper</a> <br>
    </div>
  {% endif %}  
</div>

</body>
</html>
