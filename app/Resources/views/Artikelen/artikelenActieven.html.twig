{% extends 'base.html.twig' %}
{% block body %}
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2><br>Artikelen overzicht</br></h2>
  <table class="table">
    <thead>
      <tr>
        <th>Artikel nummer</th>
        <th>Omschrijving</th>
        <th>Sechnische specificaties</th>
        <th>Inkoopprijs</th>
        <th>CVA</th>
        <th>Minimum voorraad</th>
        <th>Voorraad in aantal</th>
        <th>Bestelserie</th>
        <th>Wijzigen</th>
        <th>Deactiveren</th>
      </tr>
    </thead>
    <tbody>
      {% for artikel in artikelen %}
      <tr>
        <td>{{ artikel.artikelnr }}</td>
        <td>{{ artikel.omschrijving }}</td>
        <td>{{ artikel.technischeSpecificaties }}</td>
        <td>{{ artikel.inkoopprijs }}</td>
        <td>{{ artikel.CVA }}</td>
        <td>{{ artikel.minimumVoorraad }}</td>
        <td>{{ artikel.voorraadInAantal }}</td>
        <td>{{ artikel.bestelserie }}</td>
        <td><a href="{{ path('inkoperartikelwijzigen',{'artikelnr':artikel.artikelnr}) }}" class="btn btn-primary btn-sm square" role="button">Wijzig</a></td>
        <td><a href="{{ path('artikeldeactiveren',{'artikelnr':artikel.artikelnr}) }}" class="btn btn-danger btn-sm square" role="button">Deactiveer</a></td>
      </tr>
{% endfor %}
  </tbody>
</table>
{% endblock %}
