      <tr>
        <th>Artikelnummer</th>
        <th>Beschrijving</th>
        <th>aantal</th>
      </tr>
    </thead>
    <tbody>

      {% for vr in artikel %}
      <tr>
        <td>{{ vr.artikelnr }}</td>
        <td>{{ vr.omschrijving }}</td>
        <td>{{ vr.hoeveelheid }}</td>
      </tr>
      {% endfor %}


    </tbody>
  </table>
  {% endblock %}
